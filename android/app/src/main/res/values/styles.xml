<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>
        <item name="android:timePickerDialogTheme">@style/Dialog.Theme</item>
        <item name="android:datePickerDialogTheme">@style/Dialog.Theme</item>
    </style>

    <!-- Configuration for Dialog.theme. -->
    <style name="Dialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Header Background and Selector -->
        <item name="colorAccent">#FCC544</item>
        <!-- Ok and Cancel -->
        <item name="android:textColor">#26282C</item> 
        <!-- Header Text Color -->
        <item name="android:textColorPrimaryInverse">#26282C</item>
        <!-- Header Text Color Not Selected-->
        <item name="android:textColorSecondaryInverse">#5C4F32</item>
        <!-- Numbers -->
        <item name="android:textColorPrimary">#26282C</item>
        <!-- Selected Numbers -->
        <item name="android:textColorSecondary">#26282C</item>
        <!-- Time Picker Mode -->
        <item name="android:timePickerMode">clock</item>
        <!-- Border Radius -->
        <item name="android:dialogCornerRadius">10dp</item>
    </style>
</resources>
